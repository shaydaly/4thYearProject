<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_centerVertical="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/silver"
        android:id="@+id/messageContainer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--<Button-->
        <!--android:layout_width="0dip"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:textColor="@color/white"-->
        <!--android:background="@drawable/shape"/>-->

        <TextView
            android:id="@+id/roadsToAvoid"
            android:gravity="center"
            android:padding="50dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@color/silver"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/overSpeedDay"
            android:gravity="center"
            android:padding="50dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@color/silver"
            android:visibility="visible"
            android:layout_alignBaseline="@+id/roadsToAvoid"
            android:layout_alignBottom="@+id/roadsToAvoid"
            android:layout_alignLeft="@+id/roadsToAvoid"
            android:layout_alignStart="@+id/roadsToAvoid"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/numTrafficReported"
            android:gravity="center"
            android:padding="50dp"
            android:text=""
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@color/silver"
            android:visibility="visible"

            android:layout_alignBaseline="@+id/roadsToAvoid"
            android:layout_alignBottom="@+id/roadsToAvoid"
            android:layout_alignLeft="@+id/roadsToAvoid"
            android:layout_alignStart="@+id/roadsToAvoid"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/todayTrafficIncident"
            android:gravity="center"
            android:padding="50dp"
            android:text=""
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@color/silver"
            android:visibility="visible"
            android:layout_alignBaseline="@+id/roadsToAvoid"
            android:layout_alignBottom="@+id/roadsToAvoid"
            android:layout_alignLeft="@+id/roadsToAvoid"
            android:layout_alignStart="@+id/roadsToAvoid"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/daysSinceOverSpeed"
            android:gravity="center"
            android:padding="50dp"
            android:text=""
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@color/silver"
            android:visibility="visible"
            android:layout_alignBaseline="@+id/roadsToAvoid"
            android:layout_alignBottom="@+id/roadsToAvoid"
            android:layout_alignLeft="@+id/roadsToAvoid"
            android:layout_alignStart="@+id/roadsToAvoid"
            android:layout_marginTop="10dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark">

        <!--<Button-->
        <!--android:layout_width="0dip"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:textColor="@color/white"-->
        <!--android:background="@drawable/shape"/>-->

        <Button
            android:drawableLeft="@drawable/cast_ic_mini_controller_play"
            android:gravity="left|center_vertical"
            android:id="@+id/startJourney"
            android:padding="3dip"
            android:text="@string/startJourney"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@drawable/shape"/>

        <Button

            android:drawableLeft="@drawable/cast_ic_mini_controller_play"
            android:gravity="left|center_vertical"
            android:id="@+id/prevJourney"
            android:padding="3dip"
            android:text="@string/journeys"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@drawable/shape"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/dark">

        <!--<Button-->
        <!--android:layout_width="0dip"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:textColor="@color/white"-->
        <!--android:background="@drawable/shape"/>-->
        <Button
            android:drawableLeft="@drawable/cast_ic_mini_controller_play"
            android:gravity="left|center_vertical"
            android:id="@+id/speedCameraMap"
            android:padding="3dip"
            android:text="@string/roadMap"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@drawable/shape"/>


        <Button
            android:drawableLeft="@drawable/cast_ic_mini_controller_play"
            android:gravity="center_vertical"
            android:id="@+id/statistics"
            android:padding="3dip"
            android:text="@string/userStatistics"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            android:background="@drawable/shape"/>


    </LinearLayout>






    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"/>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="hello"-->
        <!--android:textColor="@color/red"/>-->
</LinearLayout>
