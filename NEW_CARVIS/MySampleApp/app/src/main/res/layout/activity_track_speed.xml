<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carvis.TrackSpeedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:id="@+id/relative">


        <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout9">

            <TextView
                android:text="hello"
                android:background="@drawable/shape"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/speedCamera"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:text="hello"
                android:background="@drawable/shape"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:id="@+id/badTrafficReported"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:id="@+id/linearLayout10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/trafLin"
                android:layout_weight="1"
                android:background="@color/buttonBackground">
                <Button
                    android:text="@string/addCamera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/addSpeedCamera"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:textColor="@color/white"/>

                <Button
                    android:text="@string/addTrafficIndicator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/addTrafficIndicator"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                >
                <Button
                    android:text="@string/emergencySMS"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sendEmergencySMS"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:layout_above="@+id/linearLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"/>

                <Button
                    android:text="@string/endJourney"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/endJourney"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:background="@drawable/shape"
                    android:layout_alignBaseline="@+id/sendEmergencySMS"
                    android:layout_alignBottom="@+id/sendEmergencySMS"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/speed100km"
            android:id="@+id/speed100km"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="asdassad"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/currentSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/speed60km"
            android:id="@+id/speed60km"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="asdassad"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/currentSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/speed50km"
            android:id="@+id/speed50km"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="asdassad"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/currentSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
             />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/speed80km"
            android:id="@+id/speed80km"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="asdassad"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/currentSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:text="@string/initialSpeed"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:textSize="30sp"
            android:id="@+id/currentSpeed"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:background="@color/dark"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_below="@+id/linearLayout9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>